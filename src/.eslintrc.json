{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": [2, {
      "ignoreImports": true
    }],
    "import/extensions": [2, "ignorePackages"],
    "import/no-extraneous-dependencies": 1,
    "import/no-webpack-loader-syntax": "off",
    "import/no-unresolved": 1,
    "import/prefer-default-export": "off",
    "max-classes-per-file": ["error", 2],
    "no-console": 0,
    "no-unused-vars": 1
  },
  "ignorePatterns": [
    "js/brands/**/*.js",
    "js/components/**/*.js"
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./"]
      }
    }
  }
}
