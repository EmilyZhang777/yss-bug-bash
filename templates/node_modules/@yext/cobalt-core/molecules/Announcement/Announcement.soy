{namespace cobalt.molecules}

/**
 * Class passthroughs
 * @param baseClass
 *
 * Content params
 * @param content
 * @param? ctaText
 * @param? ctaLink
 *
 * Config params
 * @param? backgroundColor
 * @param? textColor
 *
 * Meta params
 * @param? itemprop
 */
{template .Announcement}
  {let $styling} // Styling overrides typically passed by site attribute
    {if $backgroundColor or $textColor}
      {if $backgroundColor}background-color:{$backgroundColor}; {/if}{if $textColor}color:{$textColor};{/if}
    {/if}
  {/let}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Announcement' /}
    {/call}
  {/let}

  <div class="{$class}"{if $styling} style="{$styling}"{/if}>
    <span class="Announcement-text"{if $itemprop} {$itemprop}{/if}>
      {call cobalt.atoms.Text data="all"}
        {param content}
          {$content}
        {/param}
      {/call}
    </span>
    {if $ctaText and $ctaLink}
      {call cobalt.atoms.Link data="all"}
        {param content: $ctaText /}
        {param href: $ctaLink /}
      {/call}
    {/if}
  </div>
{/template}
