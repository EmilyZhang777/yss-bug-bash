{namespace cobalt.molecules}

/**
 * Passthrough to ClassBuilder
 * @param baseClass
 * @param? jsClass
 * @param? subClass
 * @param? modifiers
 * @param? attributes
 *
 * Config params
 * @param? htmlTag
 *
 * Modal params
 * @param id
 * @param content
 * @param? variant
 * @param? yaScopeName
 */
{template .Modal}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Modal' /}
      {param jsClass: 'js-modal' /}
      {param modifiers: $variant ? [$variant] : ['default'] /}
    {/call}
  {/let}

  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  {let $tag: $htmlTag ? $htmlTag : 'div' /}

  <{$tag} id="{$id}"
    {if $class} class="{$class} is-closed"{/if}
    {if $attribute} {$attribute |noAutoescape}{/if}
    {if $yaScopeName} data-ya-scope="{$yaScopeName}"{/if}>

    <div class="Modal-overlay js-modal-overlay">
      <div class="Modal-content js-modal-content">
        {$content |noAutoescape}
      </div>
    </div>

  </{$tag}>
{/template}
