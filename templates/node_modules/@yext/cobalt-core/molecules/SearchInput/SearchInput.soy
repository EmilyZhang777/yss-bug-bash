{namespace cobalt.molecules}
/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? jsClass
 * @param? modifiers
 *
 * @param? attributes
 *
 * Content Params
 * @param? label
 * @param? defaultValue
 * @param? placeholder
 *
 * Configuration Params
 * @param? name
 * @param? id
 */
{template .SearchInput}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'SearchInput' /}
    {/call}
  {/let}

  <div class="{$class}">
    {call cobalt.atoms.Input data="all"}
      {param name: $name ? $name : 'q' /}
      {param type: 'text' /}
      {param placeholder: $placeholder ?: '' /}
      {param attributes: augmentMap($attributes ?: [:], [
        'onfocus': 'this.setSelectionRange(0, this.value.length);'
      ]) /}
    {/call}
  </div>
{/template}
