{namespace cobalt.util}

/**
 * @param address
 * @param? cc
 * @param? bcc
 * @param? subject
 * @param? body
 */
{template .Email}
  {let $queryParam}
    {call cobalt.util.QueryParams}
      {param params: [
        'cc': $cc ?: '',
        'bcc': $bcc ?: '',
        'subject': $subject ?: '',
        'body': $body ?: ''
      ] /}
    {/call}
  {/let}

  mailto:{$address}{$queryParam}
{/template}
