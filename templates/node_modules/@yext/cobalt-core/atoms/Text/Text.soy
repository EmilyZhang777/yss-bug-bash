{namespace cobalt.atoms}

/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? jsClass
 * @param? modifiers
 * @param? attributes
 *
 * Content params
 * @param content
 *
 * Config params
 * @param? tag
 *
 * Meta params
 * @param? itemprop
 */
{template .Text}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Text' /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  {let $t: $tag ?: 'p' /}
  <{$t}{sp}
    class="{$class}"
    {if $itemprop} itemprop="{$itemprop}"{/if}
    {if $attribute} {$attribute |noAutoescape}{/if}
  >
    {$content |noAutoescape}
  </{$t}>
{/template}
