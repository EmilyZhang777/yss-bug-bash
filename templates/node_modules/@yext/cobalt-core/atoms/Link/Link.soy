{namespace cobalt.atoms}

/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? jsClass
 * @param? modifiers
 * @param? attributes
 *
 * Content params
 * @param content
 * @param href
 *
 * Config params
 * @param? newTab
 * @param? styleAsButton
 *
 * Meta params
 * @param? itemprop
 * @param? yaTrack
 */
{template .Link}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: $styleAsButton ? 'Button' : 'Link' /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  <a
    href="{$href}"
    class="{$class}"
    data-ya-track="{$yaTrack ?: 'link'}"
    {if $newTab}{call common.helpers.link_new_tab data="all" /}{/if}
    {if $attribute} {$attribute |noAutoescape}{/if}
    {if $itemprop} itemprop="{$itemprop}"{/if}
  >
    {$content |noAutoescape}
  </a>
{/template}
