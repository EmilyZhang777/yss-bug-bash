{namespace cobalt.atoms}

/**
 * @param baseUrl
 *
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? modifiers
 * @param? attributes
 *
 * Content
 * @param id id in icons.svg
 * @param? svgFilePath
 *
 */
{template .Icon}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Icon' /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  {if $svgFilePath}
    <svg
      class="{$class}"
      aria-hidden="true"
      {if $attribute} {$attribute |noAutoescape}{/if}
    >
      <use xlink:href="{$baseUrl}{$svgFilePath}#{$id}" />
    </svg>
  {else}
    {call .Icons data="all"}
      {param class: $class /}
    {/call}
  {/if}
{/template}
