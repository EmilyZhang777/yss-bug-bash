{namespace cobalt.atoms}

/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? modifiers
 * @param? attributes
 *
 * Content params
 * @param content
 *
 * Config params
 * @param? hLevel
 *
 * Meta params
 * @param? itemprop
 */
{template .Heading}
  {let $lvl: $hLevel ?: 2 /}
  {let $inRange:
    $lvl > 6 ? 6 :
    $lvl < 1 ? 1 :
    $lvl
  /}
  {let $tag: 'h' + $inRange /}

  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Heading' /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  <{$tag}{sp}
    class="{$class}"
    {if $itemprop} itemprop="{$itemprop}"{/if}
    {if $attribute} {$attribute |noAutoescape}{/if}
  >
    {$content |noAutoescape}
  </{$tag}>
{/template}