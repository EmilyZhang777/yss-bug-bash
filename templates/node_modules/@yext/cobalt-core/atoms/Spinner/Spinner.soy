{namespace cobalt.atoms}

/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? modifiers
 * @param? attributes
 *
 * Content
 * @param? imageSrc
 * @param? altText
 *
 */
{template .Spinner}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Spinner' /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  {let $alt}
    {if $altText}
      {$altText |noAutoescape}
    {else}
      {msg desc="Alt text for image of spinner modal that indicates that the page is loading"}
        Page loading image
      {/msg}
    {/if}
  {/let}
  <div
    class="{$class}"
    aria-hidden="true"
    {if $attribute} {$attribute |noAutoescape}{/if}
  >
    {if $imageSrc}
      <img class="Spinner-image" src="{$imageSrc}" alt="{$alt}">
    {else}
      <div class="Spinner-animation"></div>
    {/if}
  </div>
{/template}
