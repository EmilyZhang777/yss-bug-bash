{namespace cobalt.atoms}

/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param jsClass
 * @param? modifiers
 * @param? attributes
 *
 * Content params
 * @param content
 *
 * Config params
 * @param? styleAsLink
 *
 * Meta params
 * @param? itemprop
 * @param? yaTrack
 */
{template .Button}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: $styleAsLink ? 'Link' : 'Button' /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  <button
    class="{$class}"
    data-ya-track="{$yaTrack ?: 'button'}"
    {if $attribute} {$attribute |noAutoescape}{/if}
    {if $itemprop} itemprop="{$itemprop}"{/if}
  >
    {$content |noAutoescape}
  </button>
{/template}