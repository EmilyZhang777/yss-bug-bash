{namespace cobalt.atoms}

/**
 * Class passthroughs
 * @param baseClass
 * @param? subClass
 * @param? jsClass
 * @param? modifiers
 *
 * Attribute params
 * @param? attributes
 *
 * Content params
 * @param? placeholder
 * @param? label
 * @param? defaultValue
 *
 * Config params
 * @param type
 * @param name
 * @param? id
 */
{template .Input}
  {let $class}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Input' /}
    {/call}
  {/let}
  {let $labelClass}
    {call cobalt.helpers.class_builder data="all"}
      {param name: 'Label' /}
      {param modifiers: [] /}
    {/call}
  {/let}
  {let $attribute}
    {call cobalt.helpers.attribute_builder data="all" /}
  {/let}

  {if $label}
    <label class="{$labelClass}"
      id="label-{$id ? $id : $name}"
      for="{$id ? $id : $name |noAutoescape}">
        {$label |noAutoescape}
    </label>
  {/if}
  <input
    type="{$type}"
    name="{$name |noAutoescape}"
    id="{$id ? $id : $name |noAutoescape}"
    class="{$class}"
    value="{$defaultValue ?: '' |noAutoescape}"
    {if $placeholder} placeholder="{$placeholder |noAutoescape}"{/if}
    {if $attribute} {$attribute |noAutoescape}{/if}
  >
{/template}
