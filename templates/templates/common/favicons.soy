{namespace common}

/**
 * @param baseUrl
 * @param siteInternalHostName
 * @param? windowsTileBackgroundColor
 * @param? useGeneratedFavicons
 */
{template .favicons}
  {if $useGeneratedFavicons}
    {switch $siteInternalHostName}
      {default}
        <meta name="msapplication-square70x70logo" content="{$baseUrl}assets/images/favicons/primary/windows-tile-70x70.png">
        <meta name="msapplication-square150x150logo" content="{$baseUrl}assets/images/favicons/primary/windows-tile-150x150.png">
        <meta name="msapplication-square310x310logo" content="{$baseUrl}assets/images/favicons/primary/windows-tile-310x310.png">
        <meta name="msapplication-TileImage" content="{$baseUrl}assets/images/favicons/primary/windows-tile-144x144.png">
        {if $windowsTileBackgroundColor}
          <meta name="msapplication-TileColor" content="{$windowsTileBackgroundColor}">
        {/if}
        <link rel="apple-touch-icon-precomposed" sizes="152x152" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-152x152-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="120x120" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-120x120-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="76x76" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-76x76-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="60x60" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-60x60-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-144x144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-114x114-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon-72x72-precomposed.png">
        <link rel="apple-touch-icon" sizes="57x57" href="{$baseUrl}assets/images/favicons/primary/apple-touch-icon.png">
        <meta name="mobile-web-app-capable" content="yes">
        <link rel="icon" sizes="192x192" href="{$baseUrl}assets/images/favicons/primary/homescreen-192x192.png">
        <link rel="shortcut icon" href="{$baseUrl}assets/images/favicons/primary/favicon.ico">
        <link rel="icon" type="image/png" sizes="64x64" href="{$baseUrl}assets/images/favicons/primary/favicon.png">
    {/switch}
  {else}
    <link rel="shortcut icon" href="{$baseUrl}assets/images/favicon.ico">
  {/if}
{/template}
